{
  "name": "random-charts",
  "version": "0.0.3",
  "description": "Library for creating random tables and random charts for role playing games (rpgs).",
  "main": "index.js",
  "keywords": [
    "random",
    "encounter tables",
    "random charts",
    "random tables",
    "d&d",
    "rpg"
  ],
  "repository": "github:shaefer/random-charts",
  "author": "Daniel Shaefer",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "latest",
    "babel-preset-es2015": "latest",
    "babel-register": "^6.9.0",
    "chai": "latest",
    "jshint": "latest",
    "mocha": "latest"
  },
  "dependencies": {
    "seedrandom": "latest"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "lint": "jshint src || true",
    "babel": "babel src -d lib",
    "test-only": "mocha ./spec --compilers js:babel-register --recursive",
    "test": "npm run clean & npm run babel & npm run test-only",
    "build": "npm run clean & npm run lint & npm run babel & npm run test"
  }
